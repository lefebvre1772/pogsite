{% extends 'base.html.twig' %}

{% block title %}Drugs index{% endblock %}

{% block body %}
    <h1>Drugs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Barcode</th>
                <th>Immgpath</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for drug in drugs %}
            <tr>
                <td>{{ drug.id }}</td>
                <td>{{ drug.name }}</td>
                <td>{{ drug.description }}</td>
                <td>{{ drug.barcode }}</td>
                <td>{{ drug.immgpath }}</td>
                <td>{{ drug.price }}</td>
                <td>
                    <a href="{{ path('app_drugs_show', {'id': drug.id}) }}">show</a>
                    <a href="{{ path('app_drugs_edit', {'id': drug.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_drugs_new') }}">Create new</a>
{% endblock %}
