{% block body %}
	<div class="container">
		<h1 class="mt-3 mb-4">Nos produits phare</h1>
		<div class="row">
			{% for product in products %}
				{% if loop.index in 1..3 %}
					<div class="col-md-4">
						<div class="card mb-4">
							<a href="{{ path('product.detail', {id: product.id}) }}"><img src="{{ asset('img/' ~ product.imgpath) }}" alt="{{ product.name }}" class="card-img-top"></a>
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<p class="card-text">Ceci est le
									{{ product.name }}
									il est ...</p>
								<div class="d-flex justify-content-between align-item-center">
									<a href="{{ path('product.detail', {id: product.id}) }}" class="btn btn-dark">details</a>
									<span class="h5 mt-auto">{{ product.price }}
										â‚¬</span>
								</div>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
